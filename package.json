{
  "name": "whatsapp-microservice",
  "version": "1.0.0",
  "description": "WhatsApp microservice using Baileys for DigitalOcean deployment",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "deploy:setup": "npm run build && npm run pm2:start",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:restart": "pm2 restart whatsapp-microservice",
    "pm2:stop": "pm2 stop whatsapp-microservice",
    "pm2:logs": "pm2 logs whatsapp-microservice",
    "health:check": "curl -f http://localhost:3000/health",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "keywords": [
    "whatsapp",
    "baileys",
    "microservice",
    "api",
    "digitalocean"
  ],
  "author": "LocAI Team",
  "license": "MIT",
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@whiskeysockets/baileys": "^6.17.16",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.12.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "pino": "^9.9.0",
    "pino-http": "^8.6.1",
    "qrcode": "^1.5.4",
    "sharp": "^0.32.6",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.19.11",
    "@types/qrcode": "^1.5.5",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
