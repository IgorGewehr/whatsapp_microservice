# ===== BASIC SERVER CONFIG =====
NODE_ENV=production
PORT=3000
HOST=0.0.0.0
BASE_URL=http://localhost:3000

# ===== AUTHENTICATION & SECURITY =====
# CRITICAL: Generate secure secrets for production!
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secure-jwt-secret-at-least-64-chars-for-production-please
API_KEY=your-secure-api-key-for-microservice-access

# Set to false to disable authentication (DEVELOPMENT ONLY!)
REQUIRE_AUTH=true

# ===== CORS CONFIGURATION =====
# Comma-separated list of allowed origins, or "*" for all
ALLOWED_ORIGINS=https://your-locai-domain.netlify.app,https://your-custom-domain.com

# ===== LOGGING =====
LOG_LEVEL=info

# ===== WHATSAPP/BAILEYS SETTINGS =====
WHATSAPP_SESSION_DIR=./sessions
WHATSAPP_TIMEOUT=60000
QR_TIMEOUT=120000
MAX_RECONNECT_ATTEMPTS=5

# ===== WEBHOOK SETTINGS (FOR NOTIFYING LOCAI) =====
# URL where your LocAI app receives WhatsApp events
LOCAI_WEBHOOK_URL=https://your-locai-domain.netlify.app/api/webhook/whatsapp-web
LOCAI_WEBHOOK_SECRET=webhook-secret-shared-with-locai

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# ===== FILE UPLOAD =====
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# ===== MONITORING =====
ENABLE_METRICS=true
METRICS_PORT=9090

# ===== CACHE =====
CACHE_TTL=300

# ===== DATABASE (OPTIONAL) =====
# If you want to persist data to a database
# DATABASE_URL=postgresql://user:password@localhost:5432/whatsapp_microservice

# ===== DIGITALOCEAN SPACES (OPTIONAL) =====
# For storing media files
# DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
# DO_SPACES_ACCESS_KEY=your-spaces-access-key
# DO_SPACES_SECRET_KEY=your-spaces-secret-key
# DO_SPACES_BUCKET=your-bucket-name

# ===== DEVELOPMENT SETTINGS =====
# Webhook verification token (for webhook validation endpoint)
WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token